{% extends 'base.html.twig' %}

{% block title %} Calebasse inventory system!{% endblock %}

{% block body %}
<style>
    body{
        /*background-image: url("/imgs/law.jpeg");*/
        background: url("/imgs/law.jpeg") no-repeat center center fixed;
        background-size: cover;
    }
    .law-div{
        width: 75%;
        margin: auto;
        padding: 50px;
        background-color: white;
        min-height: 100vh;
    }

    .law-div-title{
        text-align: center;
    }

    #pageNation{
        display: flex;
        text-align: center;
        margin: auto;
        width: fit-content;
    }

</style>

<div class="law-div">
    <div class="law-div-title"><h3> 法律法规列表 ✅</h3></div>
    <div class="form-group">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>label</th>
                    <th>detail</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.uid }}</td>
                        <td>{{ item.detail }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div id="pageNation">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                {% for page in pages %}
                    {% if page.postion == currentPage %}
                        <li class="page-item active"><a class="page-link" href="{{page.url}}">{{ page.key }}</a></li>
                    {% else %}
                        <li class="page-item"><a class="page-link" href="{{page.url}}">{{ page.key }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
    </div>
</div>
{% endblock %}
