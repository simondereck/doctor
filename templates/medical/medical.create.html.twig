{% extends 'base.html.twig' %}

{% block title %} Calebasse inventory system!{% endblock %}

{% block body %}
    <style>
        body{
            background: whitesmoke;
        }
        .medical-div{
            padding: 50px;
            width: 80%;
            margin: auto;
            min-height: 100vh;
            background: white;
        }

        .medical-div-title{
            width: fit-content;
            margin: auto;
        }
        tbody tr:hover{
            background-color: whitesmoke;
            cursor: pointer;
        }



        table th,td{
