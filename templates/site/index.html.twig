{% extends 'base.html.twig' %}

{% block title %} Calebasse inventory system!{% endblock %}

{% block body %}
<style>
    body{
        background: url("/imgs/herb.jpeg");
    }
    .site-index{
        width: 100%;
        height: 100vh;
        background-color: rgba(0,0,0,0.3);
        padding: 50px;
    }



    .lightbox{
        width: 80vw;
        margin: auto;
    }
</style>

<div class="site-index">

    <div class="lightbox">
        <div class="row">
            <div class="col-lg-6">
                <img
                        src="https://mdbootstrap.com/img/Photos/Thumbnails/Slides/1.jpg"
                        data-mdb-img="https://mdbootstrap.com/img/Photos/Slides/1.jpg"
                        alt="Lightbox image 1"
                        class="w-100 mb-2 mb-md-4 shadow-1-strong rounded"
                />
                <img
                        src="/imgs/site-image.jpeg"
                        data-mdb-img="/imgs/site-image.jpeg"
                        alt="Lightbox image 2"
                        class="w-100 shadow-1-strong rounded"
                />
            </div>
            <div class="col-lg-6">
                <img
                        src="/imgs/site-image-2.jpeg"
                        data-mdb-img="/imgs/site-image-2.jpeg"
                        alt="Lightbox image 3"
                        class="w-100 shadow-1-strong rounded"
                />

            </div>
        </div>
    </div>
</div>
{% endblock %}
