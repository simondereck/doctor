{% extends 'base.html.twig' %}

{% block title %}It's admin lists!{% endblock %}

{% block body %}
<style>
    body{
        background-image: url("/imgs/people-1.jpg");
    }
    .admin-lists{
        padding: 50px;
        height: 100vh;
        overflow-y: scroll;
        width: 85%;
        margin: auto;
        background-color: white;
    }
    .admin-lists-title{
        text-align: center;
    }

    #pageNation{
        display: flex;
        text-align: center;
        margin: auto;
        width: fit-content;
    }
</style>

<div class="admin-lists">
    <div class="admin-lists-title"><h3>Admin lists âœ…</h3></div>
    <div class="tables">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Update time</th>
                    <th scope="col">Create time</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <th scope="row">{{ item.id }}</th>
                        <td>{{ item.username }}</td>
                        <td>{{ item.email }}</td>
                        <td>{{ item.telephone }}</td>
                        <td>{{ item.utime }}</td>
                        <td>{{ item.ctime }}</td>
                        <td>
                            <div class="form-group">
                                <a class="btn btn-success btn-sm" href="/admin/update/admin?id={{ item.id }}">update</a>
                            </div>
                            <div class="form-group">
                                <a class="btn btn-danger btn-sm" href="/admin/delete/admin?id={{ item.id }}">delete</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div id="pageNation">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                {% for page in pages %}
                    {% if page.postion == currentPage %}
                        <li class="page-item active"><a class="page-link" href="{{page.url}}">{{ page.key }}</a></li>
                    {% else %}
                        <li class="page-item"><a class="page-link" href="{{page.url}}">{{ page.key }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
    </div>

</div>
{% endblock %}
