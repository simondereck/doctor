{% extends 'base.html.twig' %}

{% block title %} Calebasse inventory system!{% endblock %}

{% block body %}
<style>
    body{
        background-image: url("/imgs/people-5.jpeg");

    }
    .login-div{
        background-color: rgba(0,0,0,0.6);
        padding: 30px;
        margin: 15vh auto 15vh;
    }
    .login-user-div{
        border-radius: 5px;
        padding: 20px;
        background-color: white;
        border: 5px;
        width: 38%;
        box-shadow: 0 5px 5px rgba(0,0,0,0.3);
        margin-left: 40%;
    }
    .user-login-div-title{
        text-align: center;
    }

    .error-message{
        color: darkred;
    }
</style>

<div class="login-div">
    <div class="login-user-div">
        <form method="post" action="/user/login">
            {{ form_start(user_login_form) }}
                <div class="user-login-div-title"><h3>User Login</h3></div>
                <div class="form-group">
                    {{ form_row(user_login_form.username) }}
                </div>
                <div class="form-group">
                    {{ form_row(user_login_form.password) }}
                </div>
                <div class="form-group error-message">
                    {{ error }}
                </div>
            {{ form_end(user_login_form) }}
        </form>
    </div>
</div>
{% endblock %}
