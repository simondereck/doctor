{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    body{
        background-image: url("/imgs/story-1.jpeg");
    }


    .create-admin-div{
        padding: 50px;
        background-color: white;
        width: 70%;
        margin: auto;
        height: 100vh;
    }
    .create-admin-div-title{
        text-align: center;
    }
</style>

<div class="create-admin-div">
    <div class="create-admin-div-title"><h2>Create Admin</h2></div>
    <form method="post" action="/admin/create/user">
        {{ form_start(user_form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(user_form) }}
        </div>

        <div class="form-group">
            {{ form_row(user_form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(user_form.telephone) }}
        </div>
        <div class="form-group">
            {{ form_row(user_form.username) }}
        </div>
        <div class="form-group">
            {{ form_row(user_form.password) }}
        </div>

        <div class="form-group">
            {{ form_row(user_form.status) }}
        </div>


        {{ form_end(user_form) }}
    </form>

</div>
{% endblock %}
